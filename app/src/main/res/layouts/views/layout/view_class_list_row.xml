<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/my_shape_ractangle"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/subjectNameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/my_shape_ractangle_white"
        android:gravity="center"
        android:text="@string/subject_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorBlack"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:stretchColumns="0,1">

        <TableRow
            android:layout_margin="2dp"
            android:orientation="vertical">
            <TextView
                android:background="@color/my_shape_ractangle_white"
                android:text="Room: "
                android:textColor="@color/colorBlack" />
            <TextView
                android:id="@+id/roomNumberTV"
                android:background="@color/my_shape_ractangle_white"
                android:gravity="center"
                android:text="cse 321"
                android:textColor="@color/colorBlack" />
        </TableRow>

        <TableRow
            android:layout_margin="2dp"
            android:orientation="vertical">
            <TextView
                android:background="@color/my_shape_ractangle_white"
                android:text="Time: "
                android:textColor="@color/colorBlack" />
            <TextView
                android:id="@+id/timeTV"
                android:background="@color/my_shape_ractangle_white"
                android:gravity="center"
                android:text="12:44pm"
                android:textColor="@color/colorBlack" />
        </TableRow>

        <TableRow
            android:layout_margin="2dp"
            android:orientation="vertical">
            <TextView
                android:background="@color/my_shape_ractangle_white"
                android:text="Duration: "
                android:textColor="@color/colorBlack" />
            <TextView
                android:id="@+id/durationTv"
                android:background="@color/my_shape_ractangle_white"
                android:gravity="center"
                android:text="60 minutes"
                android:textColor="@color/colorBlack" />
        </TableRow>

        <TableRow
            android:layout_margin="2dp"
            android:orientation="vertical">
            <TextView
                android:background="@color/my_shape_ractangle_white"
                android:text="Teacher Name: "
                android:textColor="@color/colorBlack" />
            <TextView
                android:id="@+id/teacherName"
                android:background="@color/my_shape_ractangle_white"
                android:gravity="center"
                android:text="Narayan Chakraborti"
                android:textColor="@color/colorBlack" />
        </TableRow>
    </TableLayout>
</LinearLayout>